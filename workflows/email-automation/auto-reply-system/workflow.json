            ]
        },
        "关键词匹配": {
            "main": [
                [
                    {
                        "node": "发送回复",
                        "type": "main",
                        "index": 0
                    }
                ]
            ]
        },
        "发送回复": {
            "main": [
                [
                    {
                        "node": "记录日志",
                        "type": "main",
                        "index": 0
                    }
                ]
            ]
        }
